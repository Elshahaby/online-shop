<%- include('../parts/adminheader.ejs')%>
<%- include('../parts/adminnav.ejs')%>
<%- include('../messages.ejs')%>

<link rel="stylesheet" href="/css/tablePagesStyles.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<!-- ReOrder Pages With JQuery and handle deletion using SweetAlert-->
<script src="/js/confirmDeletion.js" defer></script>


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="page-title text-primary">Categories</h2>
        <a href="/admin/categories/addCategory" class="btn btn-success shadow-sm">➕ Add a New Category</a>
    </div>
</div>

<br>

<table class="table table-striped table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">Category</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        <% categories.forEach( cat => { %>
            <tr id="id_<%= cat._id %>" class="<%= cat.slug %> draggable-row">
                <td> <%= cat.title %> </td>
                <td>
                    <a href="/admin/categories/editCategory/<%= cat.slug %>" class="btn btn-sm btn-warning">✏️ Edit</a>
                </td>
                <td>
                    <a href="/admin/categories/deleteCategory/<%= cat._id %>" class="btn btn-sm btn-danger delete-btn">🗑️ Delete</a>
                </td>

            </tr>
        <% }); %>
    </tbody>
</table>



<%- include('../parts/adminfooter.ejs')%>
